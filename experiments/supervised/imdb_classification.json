{
  "dataset_reader": {
    "type": "document_reader"
  },
  "train_data_path": "data/valid_unsup_1k.jsonl",
  "validation_data_path": "data/valid_unsup_1k.jsonl",
  "vocabulary": {
    "max_vocab_size": 10000
  },
  "model": {
    "type": "seq2vec_classifier",
    "text_field_embedder": {
      "tokens": {
        "type": "embedding",
        "embedding_dim": 200,
        "trainable": true,
        "vocab_namespace": "tokens"
      }
    },
    "encoder": {
      "type": "boe",
      "embedding_dim": 200
    }
  },
  "iterator": {
    "type": "basic",
    "batch_size": 32
  },
  "trainer": {
    "num_epochs": 10,
    "cuda_device": -1,
    "grad_clipping": 0.5,
    "optimizer": {
      "type": "adam",
      "lr": 0.0001
    }
  }
}
