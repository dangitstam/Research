{
  "dataset_reader": {
    "type": "imdb_review_reader"
  },
  "train_data_path": "data/train_labeled.jsonl",
  "validation_data_path": "data/valid_labeled.jsonl",
  "vocabulary": {
    "max_vocab_size": 8000
  },
  "model": {
    "type": "seq2vec_vae_classifier",
    "text_field_embedder": {
      "tokens": {
        "type": "embedding",
        "embedding_dim": 300,
        "trainable": true,
        "vocab_namespace": "tokens"
      }
    },
    "encoder": {
      "type": "boe",
      "embedding_dim": 300,
    },
    "latent_dim": 200
  },
  "iterator": {
    "type": "basic",
    "batch_size": 64
  },
  "trainer": {
    "num_epochs": 10,
    "cuda_device": 0,
    "grad_clipping": 0.5,
    "optimizer": {
      "type": "adam",
      "lr": 0.0001
    }
  }
}
