{
  "dataset_reader": {
    "type": "imdb_review_reader"
  },
  "train_data_path": "data/train_labeled_10k.jsonl",
  "validation_data_path": "data/valid_labeled_10k.jsonl",
  "vocabulary": {
    "max_vocab_size": 10000
  },
  "model": {
    "type": "seq2vec_vae_classifier",
    "text_field_embedder": {
      "tokens": {
        "type": "embedding",
        "embedding_dim": 200,
        "trainable": true,
        "vocab_namespace": "tokens"
      }
    },
    "encoder": {
      "type": "lstm",
      "input_size": 200,
      "num_layers": 4,
      "hidden_size": 200
    },
    "latent_dim": 200
  },
  "iterator": {
    "type": "basic",
    "batch_size": 64
  },
  "trainer": {
    "num_epochs": 10,
    "cuda_device": 0,
    "grad_clipping": 0.5,
    "optimizer": {
      "type": "adam",
      "lr": 0.0001
    }
  }
}
