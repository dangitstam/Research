{
  "dataset_reader": {
    "type": "imdb_review_reader"
  },
  "train_data_path": "data/train_labeled_small.jsonl",
  "validation_data_path": "data/valid_labeled_small.jsonl",
  "vocabulary": {
    "max_vocab_size": 8000
  },
  "model": {
    "type": "BOWTopicModel",
    "latent_dim": 200
  },
  "iterator": {
    "type": "basic",
    "batch_size": 64
  },
  "trainer": {
    "num_epochs": 10,
    "cuda_device": -1,
    "grad_clipping": 0.5,
    "optimizer": {
      "type": "adam",
      "lr": 0.0001
    }
  }
}
