{
    "dataset_reader": {
      "type": "processed_document_reader"
    },
    "train_data_path": "data/semi_supervised/train_20k_labelled.filtered.jsonl",
    "validation_data_path": "data/semi_supervised/valid.filtered.jsonl",
    "vocabulary": {
        "max_vocab_size": {
            "stopless": 2000,
            "full": 10000
        }
    },
    "model": {
      "type": "BOWTopicModelSemiSupervised",
      "background_data_path": "data/semi_supervised/train_20k_labelled.bgfreq.json",
      "update_bg": false,
      "vae": {
        "apply_batchnorm": {
            "mu": false,
            "sigma": false
        },
        "encoder": {
          "input_dim": 2004,
          "num_layers": 1,
          "hidden_dims": [300],
          "activations": ["softplus"]
        },
        "decoder": {
          "input_dim": 10,
          "num_layers": 1,
          "hidden_dims": [2004],
          "activations": ["tanh"]
        },
        "mu_projection": {
          "input_dim": 300,
          "num_layers": 1,
          "hidden_dims": [10],
          "activations": ["linear"]
        },
        "log_variance_projection": {
          "input_dim": 300,
          "num_layers": 1,
          "hidden_dims": [10],
          "activations": ["linear"]
        }
      },
      "classification_layer": {
        "input_dim": 2002,
        "num_layers": 2,
        "hidden_dims": [1000, 2],
        "activations": ["relu", "relu"]
      }
    },
    "iterator": {
      "type": "basic",
      "batch_size": 100
    },
    "trainer": {
      "num_epochs": 200,
      "cuda_device": -1,
      "optimizer": {
        "type": "adam",
        "lr": 0.002
      }
    }
  }
  