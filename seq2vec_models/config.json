{
    "dataset_reader": {
        "type": "imdb_review_reader"
    },
    "iterator": {
        "type": "basic",
        "batch_size": 16
    },
    "model": {
        "type": "seq2vec_classifier",
        "encoder": {
            "type": "lstm",
            "hidden_size": 200,
            "input_size": 200,
            "num_layers": 2
        },
        "text_field_embedder": {
            "tokens": {
                "type": "embedding",
                "embedding_dim": 200,
                "trainable": true,
                "vocab_namespace": "tokens"
            }
        }
    },
    "train_data_path": "data/train_labeled_small.jsonl",
    "validation_data_path": "data/valid_labeled_small.jsonl",
    "trainer": {
        "cuda_device": -1,
        "grad_clipping": 0.5,
        "num_epochs": 25,
        "optimizer": {
            "type": "adam",
            "lr": 0.0001
        },
        "patience": 10
    },
    "vocabulary": {
        "max_vocab_size": 10000
    }
}